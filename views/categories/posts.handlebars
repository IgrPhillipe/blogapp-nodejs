<h1>{{category.name}}</h1>
<hr>

{{#each posts}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <a href="/post/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small>Data de publicação: {{date}}</small>
    </div>
</div>
{{else}}
<h5>Este blog ainda não possui posts.</h5>
{{/each}}