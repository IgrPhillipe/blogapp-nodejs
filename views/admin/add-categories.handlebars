{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
    {{else}}    

{{/each}}

<h3>Nova categoria:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categories/new" method="POST">
            <label for="name">Nome: </label>
            <input type="text" name="name" id="name" placeholder="Nome da categoria" class="form-control">
            <br>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" placeholder="Slug da categoria" class="form-control">
            <br>
            <button type="submit" class="btn btn-success">Adicionar categoria</button>
        </form>
    </div>
</div>