<h2>Lista de Posts:</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">Novo post</button></a>

{{#each posts}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{title}}</h4>
        <p>Descrição: {{description}}</p>
        <small>Categoria: {{category.name}}</small>
        <br>
        <small>Data: {{date}}</small>
        <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success mt-4">Editar post</button></a>
        <form action="/admin/posts/delete/{{_id}}" method="post">
            <input type="hidden" name="id" id="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar post</button>
        </form>
    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhum post registrado</h4>
{{/each}}